# Core
REDIS_URL=redis://redis:6379/0

# S3/MinIO
S3_ENDPOINT_URL=http://minio:9000
S3_PUBLIC_ENDPOINT_URL=http://127.0.0.1:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=change-me-access-key
S3_SECRET_KEY=change-me-secret-key
S3_BUCKET=rmbg-assets
S3_SECURE=false
S3_ADDRESSING_STYLE=path
SIGNED_URL_TTL_SECONDS=3600

# MinIO admin
MINIO_ROOT_USER=change-me-minio-user
MINIO_ROOT_PASSWORD=change-me-minio-password

# Limits
MAX_IMAGE_BYTES=12582912
MAX_BATCH_FILES=15
MAX_IMAGE_PIXELS=20000000
RATE_LIMIT_PER_MINUTE=45

# Job/Retry
JOB_RESULT_TTL_SECONDS=86400
JOB_FAILURE_TTL_SECONDS=86400
JOB_RETRY_MAX=2
JOB_RETRY_INTERVALS=5,20

# Cleanup
CLEANUP_ENABLED=true
CLEANUP_INTERVAL_SECONDS=900
CLEANUP_OLDER_THAN_SECONDS=86400
